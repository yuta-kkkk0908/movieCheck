{
  "name": "movie-app-tools",
  "private": true,
  "version": "1.0.0",
  "description": "Developer command shortcuts for movie-app",
  "scripts": {
    "backend": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev-backend.ps1",
    "frontend": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev-frontend.ps1",
    "dev": "concurrently -k -n backend,frontend -c cyan,green \"npm run backend\" \"npm run frontend\"",
    "dev:split": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev-split.ps1",
    "test:backend": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/test-backend.ps1",
    "test:frontend": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/test-frontend.ps1",
    "test": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/test-all.ps1"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
